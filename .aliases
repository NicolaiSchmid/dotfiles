# GIT STUFF

# Undo a `git push`
alias undopush="git push -f origin HEAD^:master"

# git root
alias gr='[ ! -z `git rev-parse --show-cdup` ] && cd `git rev-parse --show-cdup || pwd`'
alias master="git checkout master"
alias main="git checkout main"

# Networking. IP address, dig, DNS
alias mip="dig +short myip.opendns.com @resolver1.opendns.com"
alias dig="dig +nocmd any +multiline +noall +answer"

# wget sucks with certificates. Let's keep it simple.
alias wget="curl -O"

# nmap stuff
alias scan='nmap -sP'

# Recursively delete `.DS_Store` files
alias cleanup_dsstore="find . -name '*.DS_Store' -type f -ls -delete"

# Shortcuts
alias g="git"

# Default delete file with shred
alias shred="shred -u"

# Fix watch alias expansion
alias ww="watch -n 1 "
alias watch='watch '

function cert() {
    echo | openssl s_client -showcerts -servername $1 -connect $1:443 2>/dev/null | openssl x509 -inform pem -noout -text
}

function extract()      # Handy Extract Program
{
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xvjf $1     ;;
            *.tar.gz)    tar xvzf $1     ;;
            *.tar.xz)    tar Jxf $1      ;;
            *.bz2)       bunzip2 $1      ;;
            *.rar)       unrar x $1      ;;
            *.gz)        gunzip $1       ;;
            *.tar)       tar xvf $1      ;;
            *.tbz2)      tar xvjf $1     ;;
            *.tgz)       tar xvzf $1     ;;
            *.zip)       unzip $1        ;;
            *.Z)         uncompress $1   ;;
            *.7z)        7z x $1         ;;
            *)           echo "'$1' cannot be extracted via >extract<" ;;
        esac
    else
        echo "'$1' is not a valid file!"
    fi
}

function pgrep()
{
    grep $1 | awk '{print $1}' 
}

function wascs()      # status of wasc platform
{
    echo "Frontend: $(curl -o /dev/null -s -w "%{http_code}\n" https://wasc.io/healthz)"
    echo "Apis: $(curl -o /dev/null -s -w "%{http_code}\n" https://apis.wasc.io/healthz)"
}

